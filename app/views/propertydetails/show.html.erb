<h2>Property Details</h2><br>
<div class="row-fluid pull-left ">
  <div class="span6 border_and_background left_col_height">
    <div class="row-fluid margin_left">
      <div class="row-fluid">
        <div class="span4"><strong>Property Type  :</strong></div>
        <div class="span3"><%= @prop.property_type %></div>
      </div>  
      <div class="row-fluid">
        <div class="span4"><strong>Area in Sqr. Feet :</strong></div> 
        <div class="span3"><%= @prop.area %></div>
      </div> 
      <div class="row-fluid">
        <div class="span4"><strong>Price  :</strong></div> 
        <div class="span3"><%= @prop.price %></div>
      </div> 
      <div class="row-fluid">
        <div class="span4"><strong>Country : </strong></div>
        <div class="span3"><%= @prop.country %></div>
      </div> 
      <div class="row-fluid">
        <div class="span4"><strong>State : </strong></div>
        <div class="span3"><%= @prop.state %></div>
      </div> 
      <div class="row-fluid">
        <div class="span4"><strong>City :</strong></div> 
        <div class="span3"><%= @prop.city %></div>
      </div>  
      <div class="row-fluid">
        <div class="span4"><strong>Location :</strong></div> 
        <div class="span3"><%= @prop.address %> </div>
      </div>  
    </div>
  </div>
  <div class="span4"> 
    <div class="row-fluid">
      <div class="row-fluid">
        <% if @prop.pictures.present? %>
          <div class="span8"><%= image_tag(@prop.pictures.first.image, size: "200x200") %></div>
        <%else%>
          <%=image_tag("/assets/default_property_image.png", size: "200x200")%>
        <%end%>
      </div>  
    </div>  
  </div>
</div>
<%= link_to 'Back', :back, :class => 'btn btn-info btn-min' %>


 

