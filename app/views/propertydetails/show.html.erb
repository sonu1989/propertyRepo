<h2>Property Details</h2><br>
<div class="row-fluid pull-left">
  <div class="span4 span2">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span10"><strong>Property Type  :</strong><%= @prop.property_type %></div>
      </div>  
      <div class="row-fluid">
        <div class="span10"><strong>Area in Sqr. Feet :</strong> <%= @prop.area %></div>
      </div> 
      <div class="row-fluid">
        <div class="span10"><strong>Price  :</strong> <%= @prop.price %></div>
      </div> 
      <div class="row-fluid">
        <div class="span10"><strong>Country : </strong><%= @prop.country %></div>
      </div> 
      <div class="row-fluid">
        <div class="span10"><strong>State : </strong><%= @prop.state %></div>
      </div> 
      <div class="row-fluid">
        <div class="span10"><strong>City :</strong> <%= @prop.city %></div>
      </div>  
      <div class="row-fluid">
        <div class="span10"><strong>Location :</strong> <%= @prop.address %> </div>
      </div>  
      
    </div>
  </div>
  <div class="span4"> 
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span8"><%=image_tag(@prop.pictures.first.image, size: "200x200")%></div>
      </div>  
    </div>  
  </div>
</div>
<%= link_to 'Back', :back, :class => 'btn btn-info btn-min' %>


 

