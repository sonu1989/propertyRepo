<div style="margin-left:300px">

  <%= form_for(@prop, :url => propertydetail_path(@prop.id), :method => :put ) do |f| %>

    <div><%= f.label :area %><br />
    <%= f.text_field :area %></div>
    
    <div><%= f.label :price %><br />
    <%= f.text_field :price %></div>
    
    <div><%= f.label :country %><br />
    <%= f.text_field :country %></div>
    
    <div><%= f.label :city %><br />
    <%= f.text_field :city %></div>
   
    <div><%= f.label :address %><br />
    <%= f.text_field :address %></div>

    <div><%= f.submit "Update" %></div>
    <% end %>
    <p><%= button_to "Cancel to update", propertydetail_path(@prop), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

    <%= link_to "Back", :back %>
</div>

