<div class="container  border_and_background">
  <h2>Edit Property Details</h2>
  <%= form_for(@prop, :url => propertydetail_path(@prop.id), :method => :put ) do |f| %>
    <div class="row-fluid">
      <div class="span12 margin_left ">
        <div class="row-fluid">
          <div class="row-fluid">
            <div class="span2 ">
              <%= f.label :property_type %>
            </div>
            <div class="span4">
              <%= f.select(:property_type, options_for_select([[PropertyDetail::PROPERTY_TYPE["residential"], 'Residential'], [PropertyDetail::PROPERTY_TYPE["commercial"], 'Commercial']] , :selected => params[:property_type])) %>
            </div>
            <div class="span2">
              <%= f.label :area %>
            </div>
            <div class="span4">
              <%= f.text_field :area %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label :price %>
            </div>
            <div class="span4">
              <%= f.text_field :price %>
            </div>
            <div class="span2">
              <%= f.label :country %>
            </div>
            <div class="span4">
              <%= f.text_field :country %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label :state %>
            </div>
            <div class="span4">
              <%= f.text_field :state %>
            </div>
             <div class="span2">
              <%= f.label :city %>
            </div>
            <div class="span4">
              <%= f.text_field :city %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span2">
              <%= f.label :address %>
            </div>
            <div class="span4">
              <%= f.text_field :address %>
            </div>
          </div>
          <div class="row-fluid">
            <div class="span1">
             <%= f.submit "Update", :class => 'btn btn-success btn-min'  %>
            </div>
            <div class="span1">
              <%= link_to "Back", :back, :class => 'btn btn-info btn-min' %>
            </div>
          </div>
        </div> 
      </div> 
    </div>
  <% end %>
</div>


