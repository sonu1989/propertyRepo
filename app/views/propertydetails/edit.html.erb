<h2>Edit Property Details</h2>
<%= form_for(@prop, :url => propertydetail_path(@prop.id), :method => :put ) do |f| %>
 <div class="row-fluid">
  <div class="span12 ">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span6 pos">
          <%= f.label :area %>
          <%= f.text_field :area %>
        </div>
        <div class="span6 pos">
          <%= f.label :price %>
          <%= f.text_field :price %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span6 pos">
          <%= f.label :country %>
          <%= f.text_field :country %>
        </div>
        <div class="span6 pos">
          <%= f.label :state %>
          <%= f.text_field :state %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span6 pos">
          <%= f.label :city %>
          <%= f.text_field :city %>
        </div>
        <div class="span6 pos">
          <%= f.label :address %>
          <%= f.text_field :address %>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span1 pos">
         <%= f.submit "Update", :class => 'btn btn-success btn-min'  %>
        </div>
        <div class="span1 pos">
          <%= link_to "Back", :back, :class => 'btn btn-info btn-min' %>
        </div>
      </div><br/> 
      <div class="row-fluid">
        <div class="span10 pos">
         <%= button_to "Cancel to update" , propertydetail_path(@prop), :class => 'btn btn-danger btn-min' %>
        </div>
      </div> 
     </div> 
   </div> 
 </div>
<% end %>



