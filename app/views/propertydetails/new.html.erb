<% @prop.pictures.build %>
<h3>Add New Property</h3>
<%= form_for(@prop, :url => propertydetails_path(@prop) , :method => :post, :validate => true, :html => {:multipart => true} ) do |f| %>
  <div class="row-fluid">
    <div class="span10">
      <div class="row-fluid">
        <div class="row-fluid">
          <div class="span5"><%= f.select :property_type, ['Select Property Type','Residential', 'Commercial'] %></div>
          <div class="span5"><%= f.text_field :area, :placeholder => "Enter area" %>(in sqr. feet)</div>
        </div>
        <div class="row-fluid">
          <div class="span5"><%= f.text_field :price, :placeholder => "Enter price"%></div>
          <div class="span5"><%= f.text_field :country , :placeholder => "Enter country"%></div></div>
        </div>
        <div class="row-fluid">
          <div class="span5"><%= f.text_field :state , :placeholder => "Enter state"%></div>
          <div class="span5"><%= f.text_field :city , :placeholder => "Enter city"%></div>
        </div>
        <div class="row-fluid">
          <div class="span5"><%= f.text_field :address, :placeholder => "Enter address" %></div>
        </div>
        <%=f.hidden_field :sold_status, :value => params[:status]%>
        <div class="row-fluid">
          <div class="span5">
            <%= f.fields_for :pictures do |pic_form| %>
            <%= pic_form.file_field :image %>
            <% end %>
          </div>
        </div>
        <div class="row-fluid">
          <div class="span1"><%= f.submit "Add", :class => 'btn btn-success btn-min' %></div>
          <div class="span1"><%= link_to 'Back', :back , :class => 'btn btn-info btn-min' %></div>
        </div>  
       </div>    
     </div>
  </div>
<% end %>

