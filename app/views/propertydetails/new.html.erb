<% @prop.pictures.build %>
<div style="margin-left:300px">
<h2Add New Property</h2>
<%= form_for(@prop, :url => propertydetails_path(@prop) , :method => :post, :html => {:multipart => true} ) do |f| %>
    
    <style>
   .pos label {
    position: relative;
    left: -140px;
    top: 30px;
    text-align: right;
    width: 130px;
   }
   </style>
   <div class="pos">
    <%= f.label :property_type %>
    <%= f.select :property_type, ['Residential', 'Commercial'] %>
  </div> 
  
  <div class="pos">
    <%= f.label :area %> 
    <%= f.text_field :area%>(Area should be in square feet)
  </div>
  <div class="pos">
    <%= f.label :price %>
    <%= f.text_field :price%>
  </div>
  
  <div class="pos"><%= f.label :country %>
  <%= f.text_field :country%></div>
  
  <div class="pos"><%= f.label :state %>
  <%= f.text_field :state%></div>
  
  <div class="pos"><%= f.label :city %>
  <%= f.text_field :city%></div>
  
  <div class="pos"><%= f.label :address %>
  <%= f.text_field :address %></div>
  Upload Image<br/>
  <%= f.fields_for :pictures do |pic_form| %>
    <%= pic_form.file_field :image %>
  <% end %>
  
  <div><%= f.submit "Add" %>    <%= link_to 'Back', :back %> </div>
  <div></div>
<% end %>
</div>
