<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name, :autofocus => true %></div>
  
  <div><%= f.label :gender %><br />
  <%= f.text_field :gender%></div>
  
  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name%></div>
  
  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>
  
  <div><%= f.label :mobile %><br />
  <%= f.text_field :mobile %></div>
  
  <div><%= f.label :user_type %><br />
  <%= f.text_field :user_type%></div>
  
  <div><%= f.label :country %><br />
  <%= f.text_field :country%></div>
  
  <div><%= f.label :state %><br />
  <%= f.text_field :state%></div>
  
  <div><%= f.label :city %><br />
  <%= f.text_field :city%></div>
  
  <div><%= f.label :address %><br />
  <%= f.text_field :address %></div>
  
  <div><%= f.label :zip_code %><br />
  <%= f.text_field :zip_code %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
