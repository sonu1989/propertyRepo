<h2>Sign up</h2>
<% @user.pictures.build %>
<%= form_for(@user, :url => registration_path(@user) , :validate =>true, :html => {:multipart => true} ) do |f| %>
  <%= devise_error_messages! %>
  <div class="row-fluid">
  <div class="span10 ">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span5"><%= f.text_field :first_name, :placeholder => "Enter first name", :autofocus => true %></div>
        <div class="span5"><%= f.text_field :last_name, :placeholder => "Enter last name"%></div>
      </div>  
      <div class="row-fluid">
        <div class="span5">  <%= f.select :gender, ['Select Gender','Male', 'Female'] %></div>
        <div class="span5 dob">DOB <%= f.date_select :dob, :order => [:day, :month, :year], :start_year => 1930 %></div>
      </div>  
      <div class="row-fluid">
        <div class="span5"> <%= f.email_field :email, :placeholder => "Enter email" %></div>
        <div class="span5"> <%= f.text_field :mobile, :placeholder => "Enter mobile no"%></div>
      </div>  
      <div class="row-fluid">
        <div class="span5"> <%= f.password_field :password, :placeholder => "Enter password" %></div>
        <div class="span5"> <%= f.password_field :password_confirmation, :placeholder => "Enter confirmation password" %></div></div>
      </div>  
      <div class="row-fluid">
        <div class="span5"><%= f.select :user_type, ['Select User Type','Seller', 'Buyer'] %></div>
        <div class="span5"> <%= f.text_field :country, :placeholder => "Enter country"%></div>
      </div>  
      <div class="row-fluid">
        <div class="span5"> <%= f.text_field :state, :placeholder => "Enter state"%></div>
        <div class="span5"> <%= f.text_field :city, :placeholder => "Enter city"%></div>
      </div>  
      <div class="row-fluid">
        <div class="span5"> <%= f.text_field :address, :placeholder => "Enter address" %></div>
        <div class="span5"> <%= f.text_field :zip_code, :placeholder => "Enter Zip code" %></div>
      </div>  
      <div class="row-fluid">
      <div class="span5"><%= f.fields_for :pictures do |pic_form| %>
        <%= pic_form.file_field :image %>
        <% end %> </div>
      </div> <br/>
       <div class="row-fluid">
        <div class="span2"> <%= f.submit "Sign up" , :class => 'btn btn-success btn-min' %></div>
        <div class="span2"> <%= render "devise/shared/links" %></div>
      </div>  
   </div>
 </div>
<% end %>
