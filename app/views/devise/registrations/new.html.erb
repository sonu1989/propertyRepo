<% @user.pictures.build %>
<div style="margin-left:300px">
<h2>Sign up</h2>
<%= form_for(@user, :url => new_users_registration_path(@user) ,:html => {:multipart => true} ) do |f| %>
  <%= devise_error_messages! %>
  
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :autofocus => true %>
  </div>
  
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name%>
  </div>
  
  <div>
    <%= f.label :gender %>
    <%= f.select :gender, ['Male', 'Female'] %>
  </div>  
  <div>Date of Birth<br/>
    <%= f.date_select :dob, :order => [:day, :month, :year], :start_year => 1930 %>
  </div>
  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
  
  <div><%= f.label :mobile %>
  <%= f.text_field :mobile %></div>
  
  <div><%= f.label :user_type %>
  <%= f.select :user_type, ['Seller', 'Buyer'] %>
  
  <div><%= f.label :country %>
  <%= f.text_field :country%></div>
  
  <div><%= f.label :state %>
  <%= f.text_field :state%></div>
  
  <div><%= f.label :city %>
  <%= f.text_field :city%></div>
  
  <div><%= f.label :address %>
  <%= f.text_field :address %></div>
  
  <div><%= f.label :zip_code %>
  <%= f.text_field :zip_code %></div>
  
  <div><%= f.label :avatar %>
  <%= f.file_field :avatar %></div>
  
  <%= f.fields_for :pictures do |pic_form| %>
    <%= pic_form.file_field :image %>
  <% end %>
  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
