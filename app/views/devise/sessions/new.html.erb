<div align=center><br/><br/><br/>
<h2>Sign in</h2>
  <style>
   .pos label {
    position: relative;
    left: -185px;
    top: 28px;
    text-align: right;
    width: 130px;
   }
   .pos_remember_me label {
    position: relative;
    left: -40px;
    top: -2px;
    text-align: right;
    width: 100px;
   }
   .pos_remember_me_check {
    position: relative;
    left: -145px;
    top: -30px;
    text-align: right;
    width: 100px;
   }
   .pos_sign_in {
    position: relative;
    left: -90px;
    top: -18px;
    bottom: 500px;
    text-align: right;
    width: 100px;
   }
  </style>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="pos">
  <%= f.email_field :email, :placeholder => "Enter your email", :autofocus => true %></div>

  <div class="pos">
  <%= f.password_field :password, :placeholder => "Enter your password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="pos_remember_me"> 
      <%= f.label :remember_me %>
    </div>
    <div class="pos_remember_me_check"> 
      <%= f.check_box :remember_me %>
    </div>
   <% end%>
    <div class="pos_sign_in"><%= f.submit "Sign in" , :class => 'btn btn-success btn-min' %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
