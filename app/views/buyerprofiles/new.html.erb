<h2>We need some information from you</h2>
<%= form_for(@buyer, :url => buyerprofiles_path(@buyer) , :method => :post,  :html => {:multipart => true} ) do |f| %>
  <div class="row-fluid">
  <div class="span12 left_col_height border_and_background">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span5"><%= f.select :property_type, ['Select Property Type','Residential', 'Commercial'] %></div>
      </div>
      <div class="row-fluid">
        <div class="span5"><%= f.text_field :min_budget, :placeholder => "Yours minimum budget", :required=>"required"%></div>
        <div class="span5"><%= f.text_field :max_budget , :placeholder => "Yours maximum budget", :required=>"required"%></div></div>
      </div>
      <div class="row-fluid">
        <div class="span5"><%= f.text_field :looking_country , :placeholder => "Looking in which country", :required=>"required"%></div>
        <div class="span5"><%= f.text_field :looking_city , :placeholder => "Looking in which city", :required=>"required"%></div>
      </div>
      <div class="row-fluid">
        <div class="span1"><%= f.submit "Submit", :class => 'btn btn-success btn-min' %></div>
        <div class="span1"><%= link_to 'Back', :back , :class => 'btn btn-info btn-min' %></div>
      </div>  
     </div>    
   </div>
 </div>
<% end %>
