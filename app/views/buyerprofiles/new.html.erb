<h2>We need some information from you</h2>
<%= form_for(@buyer, :url => buyerprofiles_path(@buyer) , :method => :post, :validate => true, :html => {:multipart => true} ) do |f| %>
  <div class="row-fluid">
  <div class="span10">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span5"><%= f.select :property_type, ['Select Property Type','Residential', 'Commercial'] %></div>
      </div>
      <div class="row-fluid">
        <div class="span5"><%= f.text_field :min_budget, :placeholder => "Yours minimum budget"%></div>
        <div class="span5"><%= f.text_field :max_budget , :placeholder => "Yours maximum budget"%></div></div>
      </div>
      <div class="row-fluid">
        <div class="span5"><%= f.text_field :looking_country , :placeholder => "Looking in which country"%></div>
        <div class="span5"><%= f.text_field :looking_city , :placeholder => "Looking in which city"%></div>
      </div>
      <div class="row-fluid">
        <div class="span2"><%= f.submit "Proceed", :class => 'btn btn-success btn-min' %></div>
        <div class="span2"><%= link_to 'Back', :back , :class => 'btn btn-info btn-min' %></div>
      </div>  
     </div>    
   </div>
 </div>
<% end %>
