<h5>Edit Your Property Profile</h5>
<%= form_for(@buyer, :url => buyerprofile_path(@buyer.id), :method => :put ) do |f| %>
  <div class="row-fluid">
    <div class="span12 ">
      <div class="row-fluid">
        <div class="row-fluid">
          <div class="span6 pos">
            <%= f.label :property_type %>
            <%= f.select(:property_type, options_for_select([['Residential', 'Residential'], ['Commercial', 'Commercial']] , :selected => params[:property_type])) %>
          </div>
        </div>
        
        <div class="row-fluid">
          <div class="span6 pos">
            <%= f.label :min_budget %>
            <%= f.text_field :min_budget %>
          </div>
          <div class="span6 pos">
            <%= f.label :max_budget %>
            <%= f.text_field :max_budget %>
          </div>
        </div>
        
        <div class="row-fluid">
          <div class="span6 pos">
            <%= f.label :looking_country %>
            <%= f.text_field :looking_country %>
          </div>
          <div class="span6 pos">
            <%= f.label :looking_city %>
            <%= f.text_field :looking_city %>
          </div>
        </div>
                
        <div class="row-fluid">
          <div class="span1 pos">
           <%= f.submit "Update", :class => 'btn btn-success btn-min'  %>
          </div>
          <div class="span1 pos">
            <%= link_to "Back", :back, :class => 'btn btn-info btn-min' %>
          </div>
        </div><br/> 
      </div> 
    </div> 
  </div>
<% end %>




