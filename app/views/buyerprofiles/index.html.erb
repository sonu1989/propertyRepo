<p class = "notice"></p> 
<div class="row-fluid">
  <div class="span3 span2 left_col_height">
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span10"><%= link_to "Edit Profile",edit_user_registration_path%></div>
        <div class="span10"><%= link_to "Search Property",new_buyerprofile_path%></div>
      </div>  
    </div>
  </div>
  <div class="span9 span2"> 
    <div class="row-fluid">
      <div class="row-fluid">
        <div class="span3"><strong>User:</strong></div>
        <div class="span6"><%= current_user.user_type %></div>
      </div>  
      <div class="row-fluid">
        <div class="span3"><strong>Mobile No:</strong></div>
        <div class="span6"><%= current_user.mobile %></div>
      </div>  
      <div class="row-fluid">
        <div class="span3"><strong>Gender:</strong></div>
        <div class="span6"><%= current_user.gender %></div>
      </div>  
      <div class="row-fluid">
        <div class="span3"><strong>City:</strong></div>
        <div class="span6"><%= current_user.city %></div>
      </div>
       <div class="row-fluid">
         <div class="span11"><b>List of properties.</b></div>
         <div class="row-fluid">
           <div class="span2"><b>Type</b></div>
           <div class="span2"><b>Price </b></div>
           <div class="span2"><b>City </b></div>
         </div>
         <div class="row-fluid">
           <% @prop.each do |p|%>
           <div class="span2"><%=p.property_type%></div>
           <div class="span2"><%=p.price%></div>
           <div class="span2"><%=p.city%></div>
           <div class="span5"><%= link_to "View Details", buyerprofile_path(p), :class => 'btn btn-success btn-small' %></div>
           <%end%>
         </div>
          <div id="example"></div>
       </div>
    </div>  
  </div>
</div>
<%= link_to 'Back', buyerprofiles_path, :class => 'btn btn-info btn-min' %>
