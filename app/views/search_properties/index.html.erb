<h3>Properties list</h3>
<div class="row-fluid">
  <div class="search_form">
    <%= render :partial => 'search_property', locals: {prop: @prop} %>
  </div>
</div>
<div class="span2 span4 left_col_height">
  <div class="row-fluid">
    <div class="row-fluid">
      <div class="span10"><strong>Search properties as your need</strong></div>
    </div>
    <div class="row-fluid">
       <div class="span3"><%=select_tag "property_type", options_for_select([ "Select Property Type", "Residential","Commercial" ]), :id => "property_type"%></div>
    </div>
    <div class="row-fluid">
       <div class="span3"><%= text_field_tag :min_budget, params[:min_budget], :placeholder => "Your minimum budget", :id => "min_budget" %></div>
    </div>
    <div class="row-fluid">
       <div class="span3"><%= text_field_tag :max_budget, params[:max_budget], :placeholder => "Yours maximum budget", :id => "max_budget" %></div>
    </div>
    <div class="row-fluid">
       <div class="span3"><%= text_field_tag :looking_country, params[:looking_country], :placeholder => "Looking in which country" , :id => "looking_country" %></div>
    </div>
    <div class="row-fluid">
       <div class="span3"><%= text_field_tag :looking_city, params[:looking_city], :placeholder => "Looking in which city", :id => "looking_city" %></div>
    </div>
    <div class="row-fluid">
      <div class="span3"><%= button_tag "Search", :class => 'btn btn-success btn-min', :id => 'search_btn' %></div>
    </div> 
    </div>
  </div>
</div>
